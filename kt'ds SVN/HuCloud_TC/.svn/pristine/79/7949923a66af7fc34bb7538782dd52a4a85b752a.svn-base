@CHARSET "UTF-8";

table.dataGrid {
	width: 710px;
	border: none;
	border-collapse: collapse;
}

table.dataGrid td, th {
	padding: 5px;
	text-align: center;
	vertical-align: middle;
}
 
table.dataGrid th {
	background-color: #0080c0;
	color: white;
	border-left: 1px solid white;
}

table.dataGrid td {
	border-bottom: 1px dashed #0080c0;
}

table.dataGrid th:FIRST-CHILD {
	border-left: none;
}

div.paging, div.write {
	width: 100%;
	text-align: center;
	padding: 10px;
}

div.write {
	text-align: right;
}