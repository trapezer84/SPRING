<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="articleDAO"
			class="com.ktds.bhyu.article.dao.impl.ArticleDAOImpl">
		<property name="sqlSessionTemplate" ref="sqlSessionTemplate" />
	</bean>

	<bean id="articleBiz"
				class="com.ktds.bhyu.article.biz.impl.ArticleBizImpl">
		<property name="articleDAO" ref="articleDAO" />
	</bean>

	<bean id="articleService"
			class="com.ktds.bhyu.article.service.impl.ArticleServiceImpl" >
		<property name="articleBiz" ref="articleBiz" />
	</bean>

</beans>
